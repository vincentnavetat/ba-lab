---
import universityOfSouthampton from '../assets/university-of-southampton.svg';

interface Props {
	title?: string;
	description?: string;
}

const { title = 'Ba Lab', description = 'Ba Lab — Neuroscience Research' } = Astro.props;

const navLinks = [
	{ href: '/', label: 'Home' },
	{ href: '/publications', label: 'Publications' },
	{ href: '/research', label: 'Research' },
	{ href: '/people', label: 'People' },
	{ href: '/news', label: 'News' },
	{ href: '/media', label: 'Media' },
	{ href: '/contact', label: 'Contact' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col m-0 font-sans text-[#1a1a1a] leading-normal antialiased">
		<header class="border-b border-gray-200 bg-white">
			<div class="max-w-[1200px] mx-auto px-6 py-4 flex items-center justify-between gap-8">
				<a href="/" class="text-2xl font-bold text-[#1a1a1a] no-underline hover:text-gray-800">
					Ba Lab
				</a>
				<nav class="main-nav" aria-label="Main navigation">
					<ul class="flex flex-wrap gap-x-6 gap-y-1 list-none m-0 p-0">
						{navLinks.map((link) => {
							const isActive = Astro.url.pathname === link.href;
							return (
								<li>
									<a
										href={link.href}
										class:list={[
											'no-underline font-medium py-2 text-gray-600 hover:text-[#1a1a1a]',
											isActive && 'text-[#1a1a1a] underline underline-offset-2',
										]}
									>
										{link.label}
									</a>
								</li>
							);
						})}
					</ul>
				</nav>
			</div>
		</header>
		<main class="max-w-[1200px] mx-auto px-6 py-8 flex-1 w-full">
			<slot />
		</main>
		<footer class="border-t border-gray-200 bg-gray-100 mt-auto">
			<div class="max-w-[1200px] mx-auto px-6 py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
				<p class="m-0 text-sm text-gray-600 order-2 sm:order-1">
					© {new Date().getFullYear()} Ba Lab. Neuroscience Research.
				</p>
				<a
					href="https://www.southampton.ac.uk"
					target="_blank"
					rel="noopener noreferrer"
					class="flex order-1 sm:order-2"
					aria-label="University of Southampton"
				>
					<img
						src={universityOfSouthampton.src}
						alt="University of Southampton"
						width={222}
						height={48}
						class="h-10 w-auto"
					/>
				</a>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	main h1 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1.25;
		margin: 0 0 0.5rem 0;
		color: #1a1a1a;
		letter-spacing: -0.025em;
	}
	@media (min-width: 640px) {
		main h1 {
			font-size: 2.25rem;
		}
	}
</style>
